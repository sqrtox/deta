{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./jest.config.ts"
  ],
  "exclude": [
    "./node_modules/"
  ]
}
